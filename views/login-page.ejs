<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/login.css">

<body>
    <form class="login_container" action="/resto/login" method="POST">
        <div class="login_frame" style="height: 460px">
            <div class="login_top">
                <span>Log in</span>
                <div>
                    Go to <a href="/resto" style="color:#6440fb">Home Page</a>
                </div>
                <p>
                    Not registered yet?
                    <a href="/resto/sign-up" style="color:#6440fb">Sign-up</a>
                </p>
            </div>
            
            <div class="login_input_frame">
                <div class="login_input_container">
                    <label>User name:</label>
                    <input
                     type="text"
                     name="mb_nick" placeholder="Input user name"
                     value="" 
                     required
                     />
                </div>
                <div class="login_input_container">
                    <label>Enter the password:</label>
                    <input 
                     type="password" 
                     name="mb_password" 
                     placeholder="Input your password" 
                     value="" 
                     required 
                     />
                </div>
            </div>
            <button class="login_btn btn" name="login" type="submit">Login</button>
        </div>
    </form>
</body>


<%- include('includes/footer') %>